# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/reputation_management

# Redis (for job queues)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth & Business Profile API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# Email Service (Maileroo)
MAILEROO_API_KEY=your-maileroo-api-key
MAILEROO_SENDING_KEY=your-maileroo-sending-key
EMAIL_FROM_ADDRESS=reviews@yourdomain.com
EMAIL_FROM_NAME=Reputation Manager

# SMS Service (Telnyx)
TELNYX_API_KEY=your-telnyx-api-key
TELNYX_PHONE_NUMBER=+1234567890
TELNYX_MESSAGING_PROFILE_ID=your-messaging-profile-id

# Anthropic AI (for review response suggestions)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=debug
